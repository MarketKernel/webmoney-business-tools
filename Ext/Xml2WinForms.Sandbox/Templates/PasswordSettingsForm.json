{
  "text": "Registration",
  "steps": [
    {
      "tunableShape": {
        "columns": [
          {
            "controls": [
              {
                "type": "TextBox",
                "desc": "Old passowrd:",
                "useSystemPasswordChar": true,
                "inspectionRules": [
                  {
                    "type": "NotEmpty",
                    "message": "Password can not be empty!"
                  }
                ]
              },
              {
                "type": "TextBox",
                "desc": "New password:",
                "name": "Password",
                "useSystemPasswordChar": true,
                "inspectionRules": [
                  {
                    "type": "NotEmpty",
                    "message": "Password can not be empty!"
                  }
                ]
              },
              {
                "type": "TextBox",
                "desc": "Repeat password:",
                "name": "PasswordConfirmation",
                "useSystemPasswordChar": true,
                "inspectionRules": [
                  {
                    "type": "NotEmpty",
                    "message": "Password can not be empty!"
                  }
                ]
              },
              {
                "type": "CheckBox",
                "desc": "Login without password",
                "behaviorRules": [
                  {
                    "trigger": "CheckedChanged",
                    "affectedControls": [
                      "Password",
                      "PasswordConfirmation"
                    ],
                    "action": "Disable"
                  }
                ]
              }
            ]
          }
        ]
      },
      "actionText": "&Finish"
    }
  ]
}